{
  "name": "solution",
  "version": "1.0.0",
  "description": "Pipedrive task",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "rm -rf dist && tsc -w",
    "dev": "ts-node-dev --inspect=0.0.0.0:${DEBUG_PORT:-3001} -- src/bin/index.ts",
    "lint": "eslint . --ext .ts",
    "lint-staged": "lint-staged",
    "test": "env TS_NODE_PROJECT=tsconfig.testing.json nyc mocha --require ts-node/register -S test/*.test.ts; nyc report --reporter=lcov --check-coverage --lines 90",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "create-migration": "./node_modules/typeorm/cli.js migration:create -d src/infrastructure/database/migration -n"
  },
  "node/no-unsupported-features/es-syntax": [
    "error",
    {
      "version": ">=8.0.0",
      "ignores": []
    }
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^12.0.4",
    "express": "^4.17.2",
    "joi": "^17.5.0",
    "mysql2": "^2.3.3",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/joi": "^17.2.3",
    "@types/mocha": "^9.0.0",
    "@types/mysql": "^2.15.20",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "chai": "^4.3.4",
    "eslint": "7.17.0",
    "husky": "4.3.7",
    "lint-staged": "10.5.3",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "ts-node": "9.1.1",
    "ts-node-dev": "^1.1.8",
    "tslint": "6.1.3",
    "typescript": "4.1.3"
  },
  "engines": {
    "node": ">=14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && tsc --noEmit && npm run test:coverage"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
