{
  "name": "solution",
  "version": "1.0.0",
  "description": "Pipedrive task",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "rm -rf dist && tsc -w",
    "dev": "ts-node-dev --inspect=0.0.0.0:${DEBUG_PORT:-3001} -- src/bin/index.ts",
    "format": "prettier --write '**/*.{ts,json}'",
    "lint": "eslint . --ext .ts",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "create-migration": "./node_modules/typeorm/cli.js migration:create -d src/infrastructure/database/migration -n"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.2",
    "joi": "^17.5.0",
    "mysql2": "^2.3.3",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/joi": "^17.2.3",
    "@types/mysql": "^2.15.20",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "7.17.0",
    "husky": "4.3.7",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "ts-node": "9.1.1",
    "ts-node-dev": "^1.1.8",
    "tslint": "6.1.3",
    "typescript": "4.1.3"
  },
  "engines": {
    "node": ">=14"
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && tsc --noEmit && npm run test:coverage"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
